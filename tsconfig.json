{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "types"],
		"paths": {
			"@extras/*": ["src/app/extras/*"],
			"@interfaces": ["src/app/interfaces"],
			"@middlewares": ["src/app/middlewares"],
			"@models": ["src/app/models"],
			"@environments": ["src/environments"],
			"@repositories": ["src/app/repositories"],
			"@controllers": ["src/app/controllers"],
			"@resolvers": ["src/app/resolvers"],
			"@view-models": ["src/app/view-models"],
			"@types": ["src/app/types"],
      "@services": ["src/app/services"],
      "@mappers": ["src/app/mappers"],
      "@exceptions": ["src/app/exceptions"],
    }
  },
  "include": ["src/**/*.ts", "src/app/mappers/service-mappers/.mapper.ts"],
}
